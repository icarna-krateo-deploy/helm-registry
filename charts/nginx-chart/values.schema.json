{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nginx Chart Schema",
  "type": "object",
  "properties": {
    "nome": {
      "type": "string",
      "description": "Nome del template"
    },
    "versione": {
      "type": "string",
      "description": "Versione del template"
    },
    "replicaCount": {
      "type": "integer",
      "description": "Numero di repliche del deployment"
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string"
        }
      },
      "required": ["repository", "tag", "pullPolicy"]
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "nodePort": {
          "type": "integer"
        }
      },
      "required": ["type", "port", "nodePort"]
    }
  },
  "required": ["nome", "versione", "replicaCount", "image", "service"]
}
